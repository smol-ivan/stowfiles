# font_family CaskaydiaCove Nerd Font
font_family Maple Mono NF
font_size 19

macos_thicken_font 0.75
text_composition_strategy legacy
modify_font rendering_sharpess 0
modify_font size 100%

enable_audio_bell no

background_opacity 0.85
window_padding_width 5

url_style curly 

remember_windows_size no

shell zsh
shell_integration no-cursor 
# shell_integration disable

cursor_shape block

scrollbar_handle_opacity 0
scrollbar_track_opacity 0 
srcollbar_track_hover_opacity 0
confirm_os_windows_close -1

sync_to_monitor no

# Cambiar el atajo para los hints de filepath (Ctrl+Shift+E)
# map ctrl+shift+e hint filepath

# Cambiar el atajo para los hints de URL (Ctrl+Shift+U)
# map ctrl+shift+p hint url
